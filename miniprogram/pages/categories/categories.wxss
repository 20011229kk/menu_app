.actions {
  flex-wrap: wrap;
  gap: 12rpx;
}

.undo-bar {
  border: 1rpx dashed #d9b889;
  background: #fff4e1;
}

.category-add .actions-wrap {
  margin-top: 12rpx;
  justify-content: space-between;
}

.add-button {
  background: linear-gradient(135deg, #ffe0ea, #ffd6c9) !important;
  border: 1rpx solid rgba(255, 173, 199, 0.6) !important;
  color: #b04b67 !important;
  box-shadow: 0 10rpx 18rpx rgba(255, 173, 199, 0.25);
}
