.undo-bar {
  border: 1rpx dashed #f5b8c7;
  background: #fff0f4;
}

.thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  box-shadow: 0 8rpx 18rpx rgba(255, 130, 170, 0.18);
}

.menu-add-card .actions-space {
  align-items: center;
}

.actions-row {
  display: flex;
  gap: 5rpx;
  flex-wrap: nowrap;
  align-items: center;
}

.btn-inline-detail {
  min-width: 0;
  flex: 1;
  max-width: 80%;
  text-align: center;
}

.actions-stack {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  align-items: flex-end;
}
