.cover {
  width: 100%;
  height: auto;
  border-radius: 20rpx;
  display: block;
}

.cover-wrap {
  margin-top: 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  box-shadow: 0 12rpx 26rpx rgba(255, 130, 170, 0.2);
  background: #fff9fb;
  padding: 12rpx;
}

.menu-item-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.menu-item-title {
  flex: 1;
  text-align: center;
}
