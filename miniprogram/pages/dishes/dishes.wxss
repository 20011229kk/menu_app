.thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  box-shadow: 0 8rpx 18rpx rgba(255, 130, 170, 0.18);
}

.filter-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-wrap: nowrap;
}

.actions-column {
  align-items: flex-start;
  flex-direction: column;
}

.button-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
}

.btn-inline {
  min-width: 180rpx;
  text-align: center;
}

.filter-chip {
  padding: 0 16rpx;
  border-radius: 999rpx;
}

.filter-picker {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: #fff9fb;
  border: 1rpx solid rgba(255, 173, 199, 0.7);
}

.filter-picker.compact {
  padding: 8rpx 14rpx;
}

.filter-text {
  color: #b04b67;
  font-size: 26rpx;
}

.filter-caret {
  color: #b04b67;
  font-size: 22rpx;
  margin-top: 2rpx;
}
