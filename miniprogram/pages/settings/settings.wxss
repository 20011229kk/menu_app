.hero {
  padding: 28rpx 24rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #f3e0c5, #f9f5ee);
  margin-bottom: 24rpx;
  border: 1rpx solid #efe1cc;
}

.hero-title {
  font-size: 36rpx;
  font-weight: 700;
}

.hero-subtitle {
  margin-top: 8rpx;
  color: #5a4f3f;
  font-size: 26rpx;
}

.gallery {
  width: 100%;
  height: 320rpx;
  border-radius: 20rpx;
  margin-top: 16rpx;
}
