.gallery {
  width: 100%;
  height: auto;
  border-radius: 24rpx;
  margin-top: 16rpx;
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  box-shadow: 0 12rpx 26rpx rgba(255, 130, 170, 0.2);
}

.collapse {
  color: #b04b67;
  font-weight: 600;
}

.collapse-body {
  margin-top: 8rpx;
  padding-top: 12rpx;
  border-top: 1rpx dashed rgba(255, 173, 199, 0.7);
}

.vant-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.van-cell-soft {
  background: transparent;
}
