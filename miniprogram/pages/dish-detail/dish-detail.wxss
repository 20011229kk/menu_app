.cover {
  width: 100%;
  height: auto;
  border-radius: 20rpx;
  display: block;
}

.cover-wrap {
  margin-bottom: 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  box-shadow: 0 12rpx 26rpx rgba(255, 130, 170, 0.2);
  background: #fff9fb;
  padding: 12rpx;
}

.dish-header {
  margin-top: 6rpx;
  margin-bottom: 12rpx;
}

.dish-desc {
  margin-top: 6rpx;
}

.actions-row {
  flex-wrap: nowrap;
  gap: 8rpx;
}

.btn-inline-detail {
  min-width: 0;
  flex: 1;
  max-width: 50%;
  text-align: center;
}
