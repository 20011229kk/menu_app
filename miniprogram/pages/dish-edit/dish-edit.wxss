textarea.input {
  min-height: 120rpx;
}

.textarea {
  min-height: 200rpx;
}

.cover {
  width: 100%;
  height: auto;
  border-radius: 20rpx;
  display: block;
}

.cover-wrap {
  margin-top: 12rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  box-shadow: 0 12rpx 26rpx rgba(255, 130, 170, 0.2);
  background: #fff9fb;
  padding: 12rpx;
}

.cover-placeholder {
  height: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #b04b67;
  background: rgba(255, 224, 234, 0.45);
  border-radius: 16rpx;
}
