page {
  background: linear-gradient(180deg, #fff5f7 0%, #fff1ea 45%, #fef8f2 100%);
  color: #3a2a2a;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.container {
  padding: 24rpx 24rpx 120rpx;
}

.card {
  background: linear-gradient(180deg, #ffffff 0%, #fff9fb 100%);
  border: 1rpx solid rgba(255, 186, 205, 0.55);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 18rpx 36rpx rgba(255, 126, 160, 0.18);
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.muted {
  color: #8c6f6f;
  font-size: 26rpx;
  line-height: 1.6;
}

.button-primary {
  background: linear-gradient(135deg, #ff7aa2, #ffb07c);
  color: #fff;
  border-radius: 999rpx;
  padding: 14rpx 28rpx;
  font-weight: 600;
  display: inline-block;
  margin-top: 12rpx;
  box-shadow: 0 10rpx 20rpx rgba(255, 122, 162, 0.3);
}

.button-ghost {
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  color: #b04b67;
  border-radius: 999rpx;
  padding: 10rpx 22rpx;
  display: inline-block;
  background: #fff3f7;
}

.button-ghost + .button-ghost,
.button-ghost + .button-primary,
.button-primary + .button-ghost {
  margin-left: 12rpx;
}

.input {
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  background: #fff9fb;
  margin-top: 12rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  flex-wrap: wrap;
}

.stack {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.badge {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: #ffe3ea;
  color: #b04b67;
  font-size: 22rpx;
}

.empty-card {
  border: 1rpx dashed rgba(255, 173, 199, 0.7);
  background: #fff7fa;
}

.undo-bar {
  border: 1rpx dashed #f5b8c7;
  background: #fff0f4;
}

.error {
  color: #c14a5f;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.segmented {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.segmented-button {
  flex: 1;
  text-align: center;
  border: 1rpx solid rgba(255, 173, 199, 0.7);
  padding: 16rpx 0;
  border-radius: 999rpx;
  background: #fff9fb;
  font-weight: 600;
}

.segmented-active {
  background: linear-gradient(135deg, #ffe0ea, #ffd6c9);
  border-color: rgba(255, 173, 199, 0.8);
}

.van-field-soft {
  border-radius: 16rpx;
  background: #fff9fb;
}

.van-button {
  border-radius: 999rpx;
}

.actions-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  align-items: center;
}

.actions-right {
  margin-left: auto;
  flex-wrap: wrap;
  gap: 8rpx;
  max-width: 280rpx;
  justify-content: flex-end;
}

.category-row .category-title {
  flex: 1;
  min-width: 0;
}

.action-icon {
  background: #f2f7ff;
  border: 1rpx solid rgba(143, 184, 255, 0.45);
  color: #4b6fa8;
  padding: 4rpx 8rpx;
  min-width: 60rpx;
}

.action-icon.action-delete {
  background: #ffe6ee;
  border-color: rgba(255, 170, 190, 0.6);
  color: #b45b72;
}

.action-icon.action-save {
  background: #e8f2ff;
  border-color: rgba(143, 184, 255, 0.65);
  color: #3c6aa8;
}

.edit-field {
  border: 1rpx solid rgba(143, 184, 255, 0.9);
  background: #eef5ff;
  box-shadow: 0 10rpx 20rpx rgba(143, 184, 255, 0.25);
}

.van-button--primary {
  background: linear-gradient(135deg, #ffe0ea, #ffd6c9) !important;
  border: none !important;
  color: #b04b67 !important;
}

.van-button--default {
  background: #f2f7ff;
  border: 1rpx solid rgba(143, 184, 255, 0.65);
  color: #4b6fa8;
}

.van-button--danger {
  background: #ffd6e0;
  border: 1rpx solid rgba(255, 170, 190, 0.8);
  color: #b45b72;
}
