page {
  background: #f7f2ea;
  color: #1f1c16;
  font-family: "PingFang SC", "Microsoft YaHei", sans-serif;
}

.container {
  padding: 24rpx 24rpx 120rpx;
}

.card {
  background: #fff;
  border: 1rpx solid #efe1cc;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 14rpx 28rpx rgba(80, 50, 20, 0.08);
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.muted {
  color: #7a6a55;
  font-size: 26rpx;
  line-height: 1.6;
}

.button-primary {
  background: #3b2c1a;
  color: #fff;
  border-radius: 999rpx;
  padding: 14rpx 28rpx;
  font-weight: 600;
  display: inline-block;
  margin-top: 12rpx;
  box-shadow: 0 8rpx 16rpx rgba(59, 44, 26, 0.2);
}

.button-ghost {
  border: 1rpx solid #e3d3bc;
  color: #3b2c1a;
  border-radius: 999rpx;
  padding: 10rpx 22rpx;
  display: inline-block;
  background: #fffaf2;
}

.button-ghost + .button-ghost,
.button-ghost + .button-primary,
.button-primary + .button-ghost {
  margin-left: 12rpx;
}

.input {
  border: 1rpx solid #e3d3bc;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  background: #fffaf2;
  margin-top: 12rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  flex-wrap: wrap;
}

.stack {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.badge {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: #f1d7a6;
  color: #3b2c1a;
  font-size: 22rpx;
}

.empty-card {
  border: 1rpx dashed #e3d3bc;
  background: #fffaf2;
}

.undo-bar {
  border: 1rpx dashed #d9b889;
  background: #fff4e1;
}

.error {
  color: #8f2a2a;
  font-size: 24rpx;
  margin-top: 12rpx;
}

.segmented {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.segmented-button {
  flex: 1;
  text-align: center;
  border: 1rpx solid #e3d3bc;
  padding: 16rpx 0;
  border-radius: 999rpx;
  background: #fff;
  font-weight: 600;
}

.segmented-active {
  background: #f3e0c5;
  border-color: #d6b98b;
}
